@{
    ViewData["Title"] = "Tags";
}

 @*Lấy số lượng bài post cho mỗi tag và gán vào thuộc tính PostCount của mỗi tag*@

<div class="container mt-4">    
    <div class="row">
        @if (Model.tags != null && Model.tags.Count > 0)
        {
            <div class="tag-container mt-4">
                @foreach (var tag in Model.tags)
                {
                    <a asp-action="PostTag" asp-controller="Home" asp-route-id="@tag.Id" class="btn-tag-custom">@tag.Name (@tag.PostCount)</a>
                }
            </div>
        }
        else
        {
            <div class="col-12 text-center">
                <p>No tags available.</p>
            </div>
        }
    </div>
</div>
