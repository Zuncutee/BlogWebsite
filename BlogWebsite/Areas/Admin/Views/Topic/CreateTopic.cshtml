@model BlogWebsite.ViewModels.CreateTopicVM

@{
	ViewData["Title"] = "Create Topic";
}

<div class="container-fluid">
	<a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Topic" asp-area="Admin">Go Back</a>
	<div class="card">
		<div class="card-header bg-primary">
			<h4 class="card-title text-white">New Post</h4>
		</div>
		<div class="card-body">
			<form asp-action="CreateTopic" asp-controller="Topic" asp-area="Admin" enctype="multipart/form-data">
				<div class="row mb-2">
					<div class="col-12">
						<div class="mb-2">
							<label>Name</label>
							<input type="text" asp-for="Name" class="form-control" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="mb-2">
					<button type="submit" class="btn btn-primary w-100">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>