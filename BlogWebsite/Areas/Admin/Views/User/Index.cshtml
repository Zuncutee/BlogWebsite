@{
	ViewData["Title"] = "Index";
}

<main>
	<div class="container-fluid px-4">
		<h1 class="mt-4">Users</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item active">List of Users</li>
		</ol>
		<div class="container-fluid">
			<a class="btn btn-primary mb-2" asp-action="Register" asp-controller="User">Add User</a>
			<div class="card">
				@*<div class="card-header bg-primary">
					<h4 class="card-title text-white">List of Users</h4>
				</div>*@
				<div class="card-body">
					<table class="table table-striped table-hover" id="myTable">
						<thead>
							<tr>
								<th>First Name</th>
								<th>Last Name</th>
								<th>User Name</th>
								<th>Email</th>
								<th>Role</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var users in Model)
							{
								<tr>
									<td>@users.FirstName</td>
									<td>@users.LastName</td>
									<td>@users.UserName</td>
									<td>@users.Email</td>
									<td>@users.Role</td>
									<td>
										<a class="btn btn-info" asp-action="ResetPassword" asp-controller="User" asp-route-id="@users.Id">Reset Password</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	

	
</main>