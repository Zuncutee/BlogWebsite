@{
	ViewData["Title"] = "Index";
}

<main>
	<div class="container-fluid px-4">
		<h1 class="mt-4">Users</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item active">List of Users</li>
		</ol>
		<div class="container-fluid">
			<a class="btn btn-dark mb-2" asp-action="Register" asp-controller="User">Add User</a>
			<div class="card">
				<div class="card-body">
					<table class="table table-striped table-hover" id="myTable">
						<thead>
							<tr>
								<th>First Name</th>
								<th>Last Name</th>
								<th>User Name</th>
								<th>Email</th>
								<th>Role</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var users in Model)
							{
								<tr>
									<td>@users.FirstName</td>
									<td>@users.LastName</td>
									<td>@users.UserName</td>
									<td>@users.Email</td>
									<td>@users.Role</td>
									<td style="display:flex;">
										<form asp-area="Admin" asp-action="DeletePost" asp-controller="Post" method="post" onsubmit="return confirm('Do you want to delete this post?')">
											<button type="submit" class="btn btn-warning btn-sm">Lock</button>
										</form>
										&nbsp;
										<form asp-area="Admin" asp-action="DeleteUser" asp-controller="User" asp-route-id="@users" method="post" onsubmit="return confirm('Do you want to delete this User?')">
											<input type="hidden" name="userId" value="@users.Id"/>
											<button type="submit" class="btn btn-danger btn-sm">Delete</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</main>
